# Database
DATABASE_URL="postgresql://user:password@localhost:5432/zuno_marketplace"

# Authentication (Better Auth)
BETTER_AUTH_SECRET="your-secret-key-min-32-chars-long-generate-with-openssl-rand-hex-32"
BETTER_AUTH_URL="http://localhost:3000"

# Cache (Upstash Redis)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# IPFS Storage (Pinata)
PINATA_JWT="your-pinata-jwt-token"
PINATA_GATEWAY_URL="https://gateway.pinata.cloud"

# Admin Account (for seed-admin script)
# Leave password empty to auto-generate
DEFAULT_ADMIN_EMAIL="admin@zuno-marketplace.local"
DEFAULT_ADMIN_PASSWORD="" (if password empty,auto generate .admin-credentials.txt)

# Public API
# User ID for public API key issuance (fixed ID, generated by seed script)
PUBLIC_API_USER_ID="usr_v1_public_system"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Optional: Monitoring
# SENTRY_DSN="https://your-sentry-dsn"


FOUNDRY_OUT_DIR=...
FOUNDRY_BROADCAST_DIR=...
